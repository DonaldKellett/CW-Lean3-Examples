import data.fintype
import category_theory.limits.limits
import category_theory.sparse

/-!
# Pullbacks

We define a category `walking_cospan` (resp. `walking_span`), which is the index category
for the given data for a pullback (resp. pushout) diagram. Convenience methods `cospan f g`
and `span f g` construct functors from the walking (co)span, hitting the given morphisms.

We define `pullback f g` and `pushout f g` as limits and colimits of such functors.

Typeclasses `has_pullbacks` and `has_pushouts` assert the existence of (co)limits shaped as
walking (co)spans.
-/

open category_theory

namespace category_theory.limits

universes v u

local attribute [tidy] tactic.case_bash

/-- The type of objects for the diagram indexing a pullback. -/
@[derive decidable_eq] inductive walking_cospan : Type v
| left | right | one
/-- The type of objects for the diagram indexing a pushout. -/
@[derive decidable_eq] inductive walking_span : Type v
| zero | left | right

instance fintype_walking_cospan : fintype walking_cospan :=
{ elems := [walking_cospan.left, walking_cospan.right, walking_cospan.one].to_finset,
  complete := Œª x, by { cases x; simp } }

instance fintype_walking_span : fintype walking_span :=
{ elems := [walking_span.zero, walking_span.left, walking_span.right].to_finset,
  complete := Œª x, by { cases x; simp } }

namespace walking_cospan

/-- The arrows in a pullback diagram. -/
inductive hom : walking_cospan ‚Üí walking_cospan ‚Üí Type v
| inl : hom left one
| inr : hom right one
| id : Œ† X : walking_cospan.{v}, hom X X

open hom

def hom.comp : Œ† (X Y Z : walking_cospan) (f : hom X Y) (g : hom Y Z), hom X Z
| _ _ _ (id _) h := h
| _ _ _ inl    (id one) := inl
| _ _ _ inr    (id one) := inr
.

instance category_struct : category_struct walking_cospan :=
{ hom  := hom,
  id   := hom.id,
  comp := hom.comp, }

instance (X Y : walking_cospan) : subsingleton (X ‚ü∂ Y) := by tidy

-- We make this a @[simp] lemma later; if we do it now there's a mysterious
-- failure in `cospan`, below.
lemma hom_id (X : walking_cospan.{v}) : hom.id X = ùüô X := rfl

/-- The walking_cospan is the index diagram for a pullback. -/
instance : small_category.{v} walking_cospan.{v} := sparse_category

end walking_cospan

namespace walking_span

/-- The arrows in a pushout diagram. -/
inductive hom : walking_span ‚Üí walking_span ‚Üí Type v
| fst : hom zero left
| snd : hom zero right
| id : Œ† X : walking_span.{v}, hom X X

open hom

def hom.comp : Œ† (X Y Z : walking_span) (f : hom X Y) (g : hom Y Z), hom X Z
  | _ _ _ (id _) h := h
  | _ _ _ fst    (id left) := fst
  | _ _ _ snd    (id right) := snd
.

instance category_struct : category_struct walking_span :=
{ hom  := hom,
  id   := hom.id,
  comp := hom.comp }

instance (X Y : walking_span) : subsingleton (X ‚ü∂ Y) := by tidy

-- We make this a @[simp] lemma later; if we do it now there's a mysterious
-- failure in `span`, below.
lemma hom_id (X : walking_span.{v}) : hom.id X = ùüô X := rfl

/-- The walking_span is the index diagram for a pushout. -/
instance : small_category.{v} walking_span.{v} := sparse_category

end walking_span

open walking_span walking_cospan walking_span.hom walking_cospan.hom

variables {C : Type u} [ùíû : category.{v} C]
include ùíû

/-- `cospan f g` is the functor from the walking cospan hitting `f` and `g`. -/
def cospan {X Y Z : C} (f : X ‚ü∂ Z) (g : Y ‚ü∂ Z) : walking_cospan.{v} ‚•§ C :=
{ obj := Œª x, match x with
  | left := X
  | right := Y
  | one := Z
  end,
  map := Œª x y h, match x, y, h with
  | _, _, (id _) := ùüô _
  | _, _, inl := f
  | _, _, inr := g
  end }

/-- `span f g` is the functor from the walking span hitting `f` and `g`. -/
def span {X Y Z : C} (f : X ‚ü∂ Y) (g : X ‚ü∂ Z) : walking_span.{v} ‚•§ C :=
{ obj := Œª x, match x with
  | zero := X
  | left := Y
  | right := Z
  end,
  map := Œª x y h, match x, y, h with
  | _, _, (id _) := ùüô _
  | _, _, fst := f
  | _, _, snd := g
  end }

@[simp] lemma cospan_left {X Y Z : C} (f : X ‚ü∂ Z) (g : Y ‚ü∂ Z) :
  (cospan f g).obj walking_cospan.left = X := rfl
@[simp] lemma span_left {X Y Z : C} (f : X ‚ü∂ Y) (g : X ‚ü∂ Z) :
  (span f g).obj walking_span.left = Y := rfl

@[simp] lemma cospan_right {X Y Z : C} (f : X ‚ü∂ Z) (g : Y ‚ü∂ Z) :
  (cospan f g).obj walking_cospan.right = Y := rfl
@[simp] lemma span_right {X Y Z : C} (f : X ‚ü∂ Y) (g : X ‚ü∂ Z) :
  (span f g).obj walking_span.right = Z := rfl

@[simp] lemma cospan_one {X Y Z : C} (f : X ‚ü∂ Z) (g : Y ‚ü∂ Z) :
  (cospan f g).obj walking_cospan.one = Z := rfl
@[simp] lemma span_zero {X Y Z : C} (f : X ‚ü∂ Y) (g : X ‚ü∂ Z) :
  (span f g).obj walking_span.zero = X := rfl

@[simp] lemma cospan_map_inl {X Y Z : C} (f : X ‚ü∂ Z) (g : Y ‚ü∂ Z) :
  (cospan f g).map walking_cospan.hom.inl = f := rfl
@[simp] lemma span_map_fst {X Y Z : C} (f : X ‚ü∂ Y) (g : X ‚ü∂ Z) :
  (span f g).map walking_span.hom.fst = f := rfl

@[simp] lemma cospan_map_inr {X Y Z : C} (f : X ‚ü∂ Z) (g : Y ‚ü∂ Z) :
  (cospan f g).map walking_cospan.hom.inr = g := rfl
@[simp] lemma span_map_snd {X Y Z : C} (f : X ‚ü∂ Y) (g : X ‚ü∂ Z) :
  (span f g).map walking_span.hom.snd = g := rfl

@[simp] lemma cospan_map_id {X Y Z : C} (f : X ‚ü∂ Z) (g : Y ‚ü∂ Z) (w : walking_cospan) :
  (cospan f g).map (walking_cospan.hom.id w) = ùüô _ := rfl
@[simp] lemma span_map_id {X Y Z : C} (f : X ‚ü∂ Y) (g : X ‚ü∂ Z) (w : walking_span) :
  (span f g).map (walking_span.hom.id w) = ùüô _ := rfl


variables {X Y Z : C}

attribute [simp] walking_cospan.hom_id walking_span.hom_id

abbreviation pullback_cone (f : X ‚ü∂ Z) (g : Y ‚ü∂ Z) := cone (cospan f g)

namespace pullback_cone
variables {f : X ‚ü∂ Z} {g : Y ‚ü∂ Z}

abbreviation fst (t : pullback_cone f g) : t.X ‚ü∂ X := t.œÄ.app left
abbreviation snd (t : pullback_cone f g) : t.X ‚ü∂ Y := t.œÄ.app right

def mk {W : C} (fst : W ‚ü∂ X) (snd : W ‚ü∂ Y) (eq : fst ‚â´ f = snd ‚â´ g) : pullback_cone f g :=
{ X := W,
  œÄ :=
  { app := Œª j, walking_cospan.cases_on j fst snd (fst ‚â´ f),
    naturality' := Œª j j' f, by cases f; obviously } }

@[reassoc] lemma condition (t : pullback_cone f g) : (fst t) ‚â´ f = (snd t) ‚â´ g :=
begin
  erw [t.w inl, ‚Üê t.w inr], refl
end

end pullback_cone

abbreviation pushout_cocone (f : X ‚ü∂ Y) (g : X ‚ü∂ Z) := cocone (span f g)

namespace pushout_cocone

variables {f : X ‚ü∂ Y} {g : X ‚ü∂ Z}

abbreviation inl (t : pushout_cocone f g) : Y ‚ü∂ t.X := t.Œπ.app left
abbreviation inr (t : pushout_cocone f g) : Z ‚ü∂ t.X := t.Œπ.app right

def mk {W : C} (inl : Y ‚ü∂ W) (inr : Z ‚ü∂ W) (eq : f ‚â´ inl = g ‚â´ inr) : pushout_cocone f g :=
{ X := W,
  Œπ :=
  { app := Œª j, walking_span.cases_on j (f ‚â´ inl) inl inr,
    naturality' := Œª j j' f, by cases f; obviously } }

@[reassoc] lemma condition (t : pushout_cocone f g) : f ‚â´ (inl t) = g ‚â´ (inr t) :=
begin
  erw [t.w fst, ‚Üê t.w snd], refl
end

end pushout_cocone

def cone.of_pullback_cone
  {F : walking_cospan.{v} ‚•§ C} (t : pullback_cone (F.map inl) (F.map inr)) : cone F :=
{ X := t.X,
  œÄ :=
  { app := Œª X, t.œÄ.app X ‚â´ eq_to_hom (by tidy),
    naturality' := Œª j j' g,
    begin
      cases j; cases j'; cases g; dsimp; simp,
      exact (t.w inl).symm,
      exact (t.w inr).symm
    end } }.

@[simp] lemma cone.of_pullback_cone_œÄ
  {F : walking_cospan.{v} ‚•§ C} (t : pullback_cone (F.map inl) (F.map inr)) (j) :
  (cone.of_pullback_cone t).œÄ.app j = t.œÄ.app j ‚â´ eq_to_hom (by tidy) := rfl

def cocone.of_pushout_cocone
  {F : walking_span.{v} ‚•§ C} (t : pushout_cocone (F.map fst) (F.map snd)) : cocone F :=
{ X := t.X,
  Œπ :=
  { app := Œª X, eq_to_hom (by tidy) ‚â´ t.Œπ.app X,
    naturality' := Œª j j' g,
    begin
      cases j; cases j'; cases g; dsimp; simp,
      exact t.w fst,
      exact t.w snd
    end } }.

@[simp] lemma cocone.of_pushout_cocone_Œπ
  {F : walking_span.{v} ‚•§ C} (t : pushout_cocone (F.map fst) (F.map snd)) (j) :
  (cocone.of_pushout_cocone t).Œπ.app j = eq_to_hom (by tidy) ‚â´ t.Œπ.app j := rfl

def pullback_cone.of_cone
  {F : walking_cospan.{v} ‚•§ C} (t : cone F) : pullback_cone (F.map inl) (F.map inr) :=
{ X := t.X,
  œÄ := { app := Œª j, t.œÄ.app j ‚â´ eq_to_hom (by tidy) } }

@[simp] lemma pullback_cone.of_cone_œÄ {F : walking_cospan.{v} ‚•§ C} (t : cone F) (j) :
  (pullback_cone.of_cone t).œÄ.app j = t.œÄ.app j ‚â´ eq_to_hom (by tidy) := rfl

def pushout_cocone.of_cocone
  {F : walking_span.{v} ‚•§ C} (t : cocone F) : pushout_cocone (F.map fst) (F.map snd) :=
{ X := t.X,
  Œπ := { app := Œª j, eq_to_hom (by tidy) ‚â´ t.Œπ.app j } }

@[simp] lemma pushout_cocone.of_cocone_Œπ {F : walking_span.{v} ‚•§ C} (t : cocone F) (j) :
  (pushout_cocone.of_cocone t).Œπ.app j = eq_to_hom (by tidy) ‚â´ t.Œπ.app j := rfl

/-- `pullback f g` computes the pullback of a pair of morphisms with the same target. -/
abbreviation pullback {X Y Z : C} (f : X ‚ü∂ Z) (g : Y ‚ü∂ Z) [has_limit (cospan f g)] :=
limit (cospan f g)
/-- `pushout f g` computes the pushout of a pair of morphisms with the same source. -/
abbreviation pushout {X Y Z : C} (f : X ‚ü∂ Y) (g : X ‚ü∂ Z) [has_colimit (span f g)] :=
colimit (span f g)

abbreviation pullback.fst {X Y Z : C} {f : X ‚ü∂ Z} {g : Y ‚ü∂ Z} [has_limit (cospan f g)] : pullback f g ‚ü∂ X :=
limit.œÄ (cospan f g) walking_cospan.left
abbreviation pullback.snd {X Y Z : C} {f : X ‚ü∂ Z} {g : Y ‚ü∂ Z} [has_limit (cospan f g)] : pullback f g ‚ü∂ Y :=
limit.œÄ (cospan f g) walking_cospan.right
abbreviation pushout.inl {X Y Z : C} {f : X ‚ü∂ Y} {g : X ‚ü∂ Z} [has_colimit (span f g)] : Y ‚ü∂ pushout f g :=
colimit.Œπ (span f g) walking_span.left
abbreviation pushout.inr {X Y Z : C} {f : X ‚ü∂ Y} {g : X ‚ü∂ Z} [has_colimit (span f g)] : Z ‚ü∂ pushout f g :=
colimit.Œπ (span f g) walking_span.right

abbreviation pullback.lift {W X Y Z : C} {f : X ‚ü∂ Z} {g : Y ‚ü∂ Z} [has_limit (cospan f g)]
  (h : W ‚ü∂ X) (k : W ‚ü∂ Y) (w : h ‚â´ f = k ‚â´ g) : W ‚ü∂ pullback f g :=
limit.lift _ (pullback_cone.mk h k w)
abbreviation pushout.desc {W X Y Z : C} {f : X ‚ü∂ Y} {g : X ‚ü∂ Z} [has_colimit (span f g)]
  (h : Y ‚ü∂ W) (k : Z ‚ü∂ W) (w : f ‚â´ h = g ‚â´ k) : pushout f g ‚ü∂ W :=
colimit.desc _ (pushout_cocone.mk h k w)

lemma pullback.condition {X Y Z : C} {f : X ‚ü∂ Z} {g : Y ‚ü∂ Z} [has_limit (cospan f g)] :
  (pullback.fst : pullback f g ‚ü∂ X) ‚â´ f = pullback.snd ‚â´ g :=
(limit.w (cospan f g) walking_cospan.hom.inl).trans
(limit.w (cospan f g) walking_cospan.hom.inr).symm

lemma pushout.condition {X Y Z : C} {f : X ‚ü∂ Y} {g : X ‚ü∂ Z} [has_colimit (span f g)] :
  f ‚â´ (pushout.inl : Y ‚ü∂ pushout f g) = g ‚â´ pushout.inr :=
(colimit.w (span f g) walking_span.hom.fst).trans
(colimit.w (span f g) walking_span.hom.snd).symm

